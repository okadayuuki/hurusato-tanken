<div class="new-registration-image">
  <%= image_tag 'photo-1545569341-9eb8b30979d9.jpeg', :width => '100%', :height => '700' %>
  <div class="new-registration-form">
      <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :style => "color:black;" %>
          </div>


          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :style => "color:black;" %>
          </div>

          <div class="field">
            <%= f.label :住んでいるエリア %><br />
              <%= f.select :eria_id, User.eria_ids.keys, {prompt: '選択してください'}, autofocus: true, autocomplete: "eria", class:'btn btn-default' %>
          </div>


          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", :style => "color:black;" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :style => "color:black;" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する",class:"btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
  </div>
</div>
