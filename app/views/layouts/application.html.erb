<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>HurusatoTanken</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/13939d080b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="application.scss">
  </head>

  <div class="body">
   
   <div style="text-align:center;"><%= image_tag 'ROGO.jpeg', :height => 250, :width => 300 %></div>
    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample1">

        <ul class="nav navbar-nav">
          <% if user_signed_in? %>

            <li><%= link_to "HOME", posts_path %></li>
            <li><%= link_to "投稿", new_post_path %></li>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>

          <% else %>

            <li><%= link_to "HOME", top_path_url %></li>
            <li><%= link_to "ABOUT", home_about_path %></li>
            <li><%= link_to "利用登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>

          <% end %>
        </ul>
    </div>
  </div>
</nav>
    <%= yield %>
  </div>
</html>
