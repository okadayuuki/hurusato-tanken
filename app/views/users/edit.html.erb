<div class="container">
	<div class="row">
		<h3>マイページ編集</h3>
		<div class="col-xs-2"></div>
		<%= form_with(model:@user) do |f| %>
		<div class="col-xs-4">
			<%= attachment_image_tag @user, :user_image, class:"img-square", fallback: "no_image.jpg", size:"200x200" %>
			<%= f.attachment_field :user_image, placeholder: "画像", class: "image-prev" %>
		</div>
		<div class="col-xs-4">
			<div class="user-edit-name">
				<%= f.label :名前 %>
				<%= f.text_field :name %>
			</div>
			<div class="user-edit-eria">
				<%= f.label :住んでいるエリア %><br />
            	<%= f.select :eria_id, User.eria_ids.keys, autofocus: true, autocomplete: "eria", class:'btn btn-default' %>
			</div>
			<div class="user-edit-detail">
				<%= f.label :プロフィール %>
				<%= f.text_area :introduction %>
			</div>
			<div class="user-edit-submit">
				<%= f.submit "編集保存" %>
			</div>
		<% end %>
		</div>
		<div class="col-xs-2"></div>
	</div>
</div>