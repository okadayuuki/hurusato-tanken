<div class="container">
	<div class="row">
		<h3 style="text-align:center;">マイページ</h3>
		<div class="col-xs-2"></div>
		<div class="col-xs-4">
			<div class="user-show-image">
				<%= attachment_image_tag @user, :user_image, :fill,60, 60, class:"img-circle", fallback: "no_image.jpg" %>
			</div>
			<div class="user-show-name">
				<%= @user.name %>
			</div>
			<div class="user-show-eria">
				<%= @user.eria_id %>
			</div>
		</div>
		<div class="col-xs-4">
			<div class="user-show-introduction">
				<%= @user.introduction %>
			</div>
			<div class="user-show-linkedit", style="text-align:right;">
			<%= link_to "マイページ編集", edit_user_path(@user.id) %>
			</div>
		</div>
		<div class="col-xs-2"></div>
	</div>
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<div class="user-show-posts">
				<% @posts.each do |post| %>
				  <%= link_to post_path(@post.id) do %>
				  <%= attachment_iamge_tag @post.id, :image, :fill, 30, 30 %>
				  <% end %>
				<% end %>
			</div>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>