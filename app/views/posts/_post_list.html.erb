<div class="post-list">
	<%= attachment_image_tag post.user, :user_image, class: "img-circle", fallback: "no_image.jpg", size:"50x50" %>
	<div class="post-list-name">
		<%= link_to post.user.name, user_path(post.user_id) %>
	</div>
	<br>
	<div class="post-list-image">
		<%= link_to post_path(post.id) do %>
			<%= attachment_image_tag post, :image, class: "img-square", fallback: "no_image.jpg", size:"700x350" %>
		<% end %>
	</div>
	<div class="post-list-tag">
		<% post.tags.each do |tag| %>
        	<span class="tag"><%= tag.name %></span>
        <% end %>
	</div>
	<div class="post-list-eria_id" style="margin-right:20px; float:left;">
		<%= post.eria_id %>
	</div>
	<div class="post-list-title" style="margin-right:20px; float:left;">
		<%= post.title %>
	</div>
	<div class="post-list-scene_id" style="margin-right:20px; float:left;">
	<%= post.scene_id %>
	</div>
	<div id="likes_buttons_<%= post.id %>">
        <%= render 'likes/like', post: post %>
    </div>
	<br>
	<%= post.detail %>
</div>