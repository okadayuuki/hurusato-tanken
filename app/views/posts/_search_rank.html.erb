<div class="search-form-image">
	<%= image_tag 'japanese-paper_00472.jpg', :width => '100%', :height => '300' %>
		<div class="search-form">
			<div class="search-form-keyword">
				<%= form_with(model:post, url:{action: 'search'} , method: :get, local: true) do |f| %>
					<div class="search-form-field" style="margin:20px;">
						<%= f.text_field :title, value: @search_params[:title] %>
						<%= f.submit "キーワード検索" %>
					</div>
				<% end %>
			</div>
			<div class="search-eria-scene">
				<%= form_with(model:post, url:{action: 'search'} , method: :get, local: true) do |f| %>
					<div class="how-search">
						<label><%= f.radio_button :add, 1, checked:true, checked: "checked" %>エリア検索</label><br>
						<label><%= f.radio_button :add, 2 %>シーン検索</label><br>
						<label><%= f.radio_button :add, 3 %>エリア・シーン検索</label><br>
					</div>
					<div class="search-form-eria-scene">
						<%= f.select(:eria_id, Post.eria_ids.keys, {prompt: 'エリア選択'}, value: @search_params[:eria_id]) %>
						<%= f.select(:scene_id, Post.scene_ids.keys, {prompt: 'シーン選択'}, value: @search_params[:eria_id]) %>
						<%= f.submit "エリア・シーン検索" %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="ranking-famous-post-image">
			<%= image_tag 'p0076_m.jpeg', :width => '100%', :height => '900' %>
			<div class="ranking-famous-post">
			<h3>人気投稿ランキング</h3>
			<div class="ranking-list">
			<% @all_ranks.each.with_index(1) do |post, i| %>
				<ul>
					<li>
						No.<%= i %>
						<%= link_to post_path(post.id) do %>
						<%= attachment_image_tag post.user, :user_image, class: "img-circle", fallback: "no_image.jpg", size:"50x50" %>
						<%= post.user.name %>
						<br>
						<%= post.title %>
						<br>
						<%= attachment_image_tag post, :image, class: "img-square", fallback: "no_image.jpg", size:"250x170" %>
						<% end %>
					</li>
				</ul>
			<% end %>
			</div>
			</div>
		</div>
</div>