<div class="container">
	<div class="row">
		<!--検索機能-->
		<div class="col-xs-4">
			<div class="search-form">
				<%= form_with(model:@search_posts, url:{action: 'search'} , method: :get, local: true) do |f| %>
					<div class="field">
						<%= f.label(:title) %>
						<%= f.text_field :title, value: @search_params[:title] %>
						<%= f.submit "キーワード検索" %>
					</div>
				<% end %>

				<%= form_with(model:@eria_scene_search, url:{action: 'search'} , method: :get, local: true) do |f| %>
					<%= f.select_tag(:option, options_for_select[[エリアのみ検索: 1],[利用シーンのみ検索: 2],[エリア・シーン検索: 3]]) %>
					<%= f.select(:eria_id, Post.eria_ids.keys, value: @search_params[:eria_id]) %>
					<%= f.select(:scene_id, Post.scene_ids.keys, value: @search_params[:eria_id]) %>
					<%= f.submit "エリア・シーン検索" %>
				<% end %>
			</div>
		</div>
		<!--一覧-->
		<div class="col-xs-8">
			<h4></h4>
			<% @do_search.each do |post| %>
				<%= render 'post_list', post: post %>
			<% end %>
		</div>
	</div>
</div>